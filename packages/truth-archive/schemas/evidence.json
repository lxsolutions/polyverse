

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "source_url": { "type": "string", "format": "uri" },
    "snapshot_url": { "type": ["string", "null"] },
    "retrieved_at": { "type": "string", "format": "date-time" },
    "published_at": { "type": ["string", "null"], "format": "date-time" },
    "outlet": { "type": ["string", "null"] },
    "author": { "type": ["string", "null"] },
    "geography": { "type": ["string", "null"] },
    "language": { "type": "string", "default": "en" },
    "media_type": { "type": "string", "default": "text/html" },
    "content_hash": { "type": ["string", "null"] },
    "quote": { "type": ["string", "null"] },
    "spans": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start": { "type": "integer" },
          "end": { "type": "integer" }
        },
        "required": ["start", "end"]
      }
    },
    "stance": { "type": "string", "enum": ["supports", "contradicts", "mixed/unclear"] },
    "quality_score": { "type": "number", "minimum": 0, "maximum": 1 },
    "independence_group_id": { "type": ["string", "null"] },
    "primary_secondary_tertiary": { "type": "string" },
    "method_notes": { "type": "string" }
  },
  "required": [
    "id", "source_url", "retrieved_at",
    "stance", "quality_score", "primary_secondary_tertiary"
  ]
}


