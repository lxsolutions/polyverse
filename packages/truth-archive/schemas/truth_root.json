



{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TruthRoot",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "text": { "type": "string" },
    "owner": { "type": "string", "default": "user" },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "root_type": {
      "type": "string",
      "enum": ["empirical", "causal", "structural", "normative"]
    },
    "scope": { "type": "string" },  // global or topic("...")
    "lock_state": {
      "type": "string",
      "enum": ["OPEN", "HELD", "FIXED"]
    },
    "review_interval_days": { "type": "integer", "minimum": 1 },
    "notes": { "type": "string" },
    "dependent_claim_ids": { "type": "array", "items": { "type": "string" } },
    "worldview_tags": { "type": "array", "items": { "type": "string" } }
  },
  "required": [
    "id", "text", "root_type",
    "scope", "lock_state"
  ]
}




